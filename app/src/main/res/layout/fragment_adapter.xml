<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_main_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/img_main_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                app:layout_constraintTop_toTopOf="@id/layout_main_card"
                app:layout_constraintLeft_toLeftOf="@id/layout_main_card"
                app:layout_constraintRight_toRightOf="@id/layout_main_card"
                app:layout_constraintBottom_toTopOf="@id/btn_main_card"/>

            <Button
                android:id="@+id/btn_main_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorPrimary"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="@id/layout_main_card"
                app:layout_constraintLeft_toLeftOf="@id/layout_main_card"
                app:layout_constraintRight_toRightOf="@id/layout_main_card"
                app:layout_constraintTop_toBottomOf="@id/img_main_card" />
        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>